#!/bin/bash

if [ $# -ne 1 ]
then
    echo 'please input <up|stop|restart>'
    exit 0
fi
cd $HOME/docker/php-laravel/
if [ $1 == up ]
then
    docker-compose up -d
elif [ $1 == stop ]
then
    docker-compose stop
elif [ $1 == restart ]
then
    docker-compose stop
    docker-compose up -d
else
    echo '参数错误'
fi